<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>

<!-- add the content for the add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
        <h1><%= title %></h1>
        <form class="form" method="POST">
        <!-- to add the name in the database -->
            <div class="form-group">
                <label for="productTextField">product</label>
                <input type="text" class="form-control" id="productTextField" placeholder="Enter the product" name="product" required>
            </div>
            <div class="form-group">
                <label for="categoryTextField">category</label>
                <input type="text" class="form-control" id="categoryTextField" placeholder="Enter the category" name="category" required>
            </div>
            <div class="form-group">
                <label for="priceTextField">price</label>
                <input type="text" class="form-control" id="priceTextField" placeholder="Enter the price" name="price" required>
            </div>
            <div class="form-group">
                <label for="colorTextField">color</label>
                <input type="text" class="form-control" id="colorTextField" placeholder="Enter the color" name="color" required>
            </div>
            <div class="form-group">
                <label for="metalTextField">metal</label>
                <input type="text" class="form-control" id="metalTextField" placeholder="Enter the metal" name="metal" required>
            </div>
            <div class="form-group">
                <label for="sizeTextField">size</label>
                <input type="text" class="form-control" id="sizeTextField" placeholder="Enter the size" name="size" required>
            </div>
            <button class="btn btn-primary" type="submit">Submit
            <i class="fas fa-edit"></i></button>

            <button class="btn btn-warning" type="submit">Cancel
            <i class="fas fa-undo"></i></button>

        </form> 
    </div>
</div>

